<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logo_karahba"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/cadre"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:paddingBottom="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enregistrement"
                android:id="@+id/textView"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:background="@drawable/iconregister"
                android:textAlignment="center"
                android:layout_gravity="center" />



            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/marque"
                android:hint="Marque"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@drawable/oval"
                android:layout_gravity="center_horizontal|top"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/modele"
                android:hint="ModÃ©le"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@drawable/oval"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/dateVoiture"
                android:hint="Date"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@drawable/oval"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="15dp" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <RadioButton
                    android:id="@+id/yes_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diesel"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <RadioButton
                    android:id="@+id/no_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/essence"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginLeft="80dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000000"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dernier Ravitaillement chez :"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal" />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/big"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/marqueH"
                android:hint="Marque d'huile"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@drawable/oval"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="25dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/typeH"
                android:hint="Type de l'huile"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@drawable/oval"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Importer des Images de voiture"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:background="@drawable/title_line"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cadre_upload"
                android:layout_marginTop="15dp"
                android:id="@+id/upload1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/precedent"
                    android:background="@drawable/previous"
                    android:padding="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|bottom" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/finish"
                    android:background="@drawable/finish"
                    android:padding="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp" />
            </RelativeLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>